<%- include("partials/header.ejs") %>
<div>
	<h1>EDIT BLOG POST, <%= blog.title %> </h1>
	<form class ="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
			<div class ="field">
				<input type="text" name="blog[title]" value="<%= blog.title %>">
			</div>
			<div class ="field">
				<input type="text" name="blog[category]" value="<%= blog.category %>">
			</div>
			<div class ="field">
				<input type="text" name="blog[studentID]" value="<%= blog.studentID %>">
			</div>
			<div class ="field">
				<input type="text" name="blog[name]" value="<%= blog.name %>">
			</div>
			<div class ="field">
				<textarea name="blog[content]"><%= blog.content %></textarea>
			</div>
			<div class ="field">
				<button class="ui yellow button" type="submit">Post</button>
			</div>
	</form>
</div>
<%- include("partials/footer.ejs") %>